<mah:MetroWindow x:Class="DronTaxi.UI.Windows.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DronTaxi.UI.Windows"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:userControls="clr-namespace:DronTaxi.UI.UserControls"
        mc:Ignorable="d" Background="#800080"
        Title="Добавить / изменить пользователя" SizeToContent="Width" Height="700" WindowStartupLocation="CenterOwner" Closed="EditUserWindow_OnClosed">
